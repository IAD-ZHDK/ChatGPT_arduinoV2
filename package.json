{
    "name": "sentient-senses",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "version": "1.0.0",
    "description": "An art project running application on a headless Raspberry Pi, utilizing a Node.js backend and a p5.js frontend. The application will serve as a kiosk interface, providing an interactive experience through a web browser.",
    "main": "index.js",
    "dependencies": {
        "acorn": "^8.14.1",
        "acorn-walk": "^8.3.4",
        "colorjs.io": "^0.5.2",
        "escodegen": "^2.1.0",
        "esprima": "^4.0.1",
        "estraverse": "^5.3.0",
        "esutils": "^2.0.3",
        "gifenc": "^1.0.3",
        "i18next": "^19.9.2",
        "i18next-browser-languagedetector": "^4.3.1",
        "libtess": "^1.2.2",
        "omggif": "^1.0.10",
        "p5": "^2.0.1",
        "pako": "^2.1.0",
        "pixelmatch": "^7.1.0",
        "pngjs": "^7.0.0",
        "source-map": "^0.6.1",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "concurrently": "^9.1.2",
        "ts-node": "^10.9.2",
        "vite": "^6.3.5"
    },
    "scripts": {
        "start:frontend": "npm --prefix frontend run dev",
        "start:backend": "npx ts-node backend/server.js",
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
    },
    "keywords": [],
